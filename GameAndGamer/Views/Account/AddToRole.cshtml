@model GameAndGamer.Models.UserToRole
@{
    ViewBag.Title = "AddToRole";
}

<h2>Add To Role</h2>

@using (Html.BeginForm("AddToRole", "Account"))
{
    <div>
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Rolls), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">save</button>
}
